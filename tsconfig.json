{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "ES2015",
      "es6",
      "es2017"
    ],
    "module": "commonjs",
    "outDir": "./build",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": false,
    "pretty": true,
    "strictNullChecks": true
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
      "node_modules/*"
  ]
}
